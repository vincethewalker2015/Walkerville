            <li><%= link_to "Create a Topic", new_topic_path %></li>
             <li><%= link_to "All Topics", topics_path %></li>
          </ul>
        </nav>
      </div>
    </header>
    <%= render "layouts/flash" %>
  <%= yield %>
  </body>
</html>
